 <head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <title>
   WaveTune
  </title>
  <script src="https://cdn.tailwindcss.com">
  </script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&amp;display=swap" rel="stylesheet"/>
  <style>
   body {
            font-family: 'Montserrat', sans-serif;
        }
        .subscribe-container {
  position: absolute;
  top: 20px;
  right: 20px;
}

.subscribe-button {
  background-color: #8E44AD; /* Vibrant Purple */
  color: #BDC3C7; /* Light Gray Text */
  border: none;
  border-radius: 25px;
  padding: 10px 20px;
  font-size: 16px;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
  transition: transform 0.3s ease, background-color 0.3s ease;
}

.subscribe-button:hover {
  background-color: #3498DB; /* Neon Blue on hover */
  transform: scale(1.1);
}

.subscribe-button:active {
  transform: scale(0.95);
}
nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative; /* To position the Subscribe button inside the nav */
  }
  
  nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  nav ul li {
    margin: 0 10px;
  }
  
  nav a {
    text-decoration: none;
    color: #BDC3C7; /* Light Gray Text */
    font-size: 16px;
    transition: color 0.3s ease;
  }
  
  nav a:hover {
    color: #3498DB; /* Neon Blue */
  }
  
  nav .subscribe-container {
    position: absolute;
    top: 50%;
    right: 150px; /* Adjust this value to position the Subscribe button relative to the Logout button */
    transform: translateY(-50%);
  }
  
  nav .subscribe-button {
    background-color: #8E44AD; /* Vibrant Purple */
    color: #BDC3C7; /* Light Gray Text */
    border: none;
    border-radius: 25px;
    padding: 8px 20px;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, background-color 0.3s ease;
  }
  
  nav .subscribe-button:hover {
    background-color: #3498DB; /* Neon Blue on hover */
    transform: scale(1.1);
  }
  
  nav .subscribe-button:active {
    transform: scale(0.95);
  }
  
  nav button {
    transition: background-color 0.3s ease;
  }
  
  nav button:hover {
    background-color: #3498DB;
  }
  
  nav .text-#3498DB {
    font-size: 24px;
  }
  
  nav .bg-#8E44AD {
    padding: 10px 20px;
    border-radius: 5px;
  }
  
  nav .bg-#8E44AD:hover {
    background-color: #3498DB;
  }
  
  </style>
 </head>
 <body class="bg-[#121212] text-[#BDC3C7]">
  <!-- Navbar -->
  <nav class="bg-[#1E1E2C] p-4 flex justify-between items-center">
   <div class="text-[#3498DB] text-2xl font-bold">
    WaveTune
   </div>
   <ul class="flex space-x-6">
    <li>
     <a class="hover:text-[#3498DB]" href="#">
      Home
     </a>
    </li>
    <li>
     <a class="hover:text-[#3498DB]" href="#">
      Explore
     </a>
    </li>
    <li>
     <a class="hover:text-[#3498DB]" href="#">
      Playlists
     </a>
    </li>
   </ul>
   <a href="/logout"><button class="bg-[#8E44AD] text-white px-4 py-2 rounded hover:bg-[#3498DB]">
    Logout
   </button></a>
   <div class="subscribe-container">
    <a href="/sub"><button class="subscribe-button">Subscribe</button></a>
    
  </div>
  </nav>
  <!-- Main Section -->
  <main class="p-8">
   <h1 class="text-[#8E44AD] text-3xl font-bold mb-6">
    Featured Songs
   </h1>
   <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <!-- Song Card 1 -->
    <% songs.forEach(song => { %>
      <div class="bg-[#1E1E2C] p-4 rounded shadow-lg hover:shadow-xl hover:scale-105 transition transform duration-300">
        <img alt="Album cover image of <%= song.title %>" class="w-full h-48 object-cover rounded mb-4" height="300" src="<%= song.coverImage %>" width="300"/>
        <h2 class="text-lg font-bold text-[#BDC3C7]">
          <%= song.title %>
        </h2>
        <p class="text-[#3498DB]">
          <%= song.artist %>
        </p>
        <a href="/song/<%= song._id %>">
          <div class="flex justify-center mt-4">
            <button class="bg-[#8E44AD] text-white p-2 rounded-full hover:bg-[#3498DB]">
              <i class="fas fa-play"></i>
            </button>
          </div>
        </a>
      </div>
    <% }); %>
   </div>
  
  </main>
  <!-- Footer -->
  <footer class="bg-[#1E1E2C] p-4 mt-8">
   <div class="flex justify-between items-center">
    <div class="flex space-x-4">
     <a class="hover:text-[#3498DB]" href="#">
      Privacy Policy
     </a>
     <a class="hover:text-[#3498DB]" href="#">
      Terms of Service
     </a>
    </div>
    <div class="flex space-x-4">
     <a class="hover:text-[#3498DB]" href="#">
      <i class="fab fa-facebook-f">
      </i>
     </a>
     <a class="hover:text-[#3498DB]" href="#">
      <i class="fab fa-twitter">
      </i>
     </a>
     <a class="hover:text-[#3498DB]" href="#">
      <i class="fab fa-instagram">
      </i>
     </a>
    </div>
   </div>
  </footer>
 </body>

